---
const states = ['All States', 'TX', 'TN', 'NC', 'MO', 'KS'];
const priceRanges = ['Any Price', '$', '$$', '$$$', '$$$$'];
const ratings = ['Any Rating', '4.5+', '4.0+', '3.5+'];
---

<div class="bg-white shadow-md p-4 sticky top-0 z-10">
  <div class="max-w-7xl mx-auto flex flex-wrap gap-4 items-center">
    <div class="flex-1 min-w-[200px]">
      <select class="w-full p-2 border rounded-lg">
        {states.map(state => <option>{state}</option>)}
      </select>
    </div>
    <div class="flex-1 min-w-[200px]">
      <select class="w-full p-2 border rounded-lg">
        {priceRanges.map(price => <option>{price}</option>)}
      </select>
    </div>
    <div class="flex-1 min-w-[200px]">
      <select class="w-full p-2 border rounded-lg">
        {ratings.map(rating => <option>{rating}</option>)}
      </select>
    </div>
    <div class="flex-1 min-w-[200px]">
      <input 
        type="text" 
        placeholder="Search restaurants..." 
        class="w-full p-2 border rounded-lg"
      >
    </div>
  </div>
</div>